:setup
	global item_candy_picked = false
	global item_candy_used = false
	global item_shoelaces_picked = false
	global item_pen_picked = false
	
	if item_candy_picked:
		set_active("candy", false)
	if item_candy_used:
		set_active("spider", false)
	if item_shoelaces_picked:
		set_active("shoelaces", false)
	if item_pen_picked:
		set_active("pen", false)

	play_snd("res://game/rooms/under_the_bed/music/LittleThings_Gameplay3UnderBed_Loop.mp3", _music)
